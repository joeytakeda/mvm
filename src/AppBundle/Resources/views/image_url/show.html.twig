{% extends 'base.html.twig' %}

{% block title %}ImageUrl{% endblock %}

 {% block pageheader %}
     <h1>ImageUrl Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('image_url_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('image_url_edit', { 'id': imageUrl.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('image_url_delete', { 'id': imageUrl.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ImageUrl?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if imageUrl.created %}{{ imageUrl.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if imageUrl.updated %}{{ imageUrl.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
