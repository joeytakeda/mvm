{% extends 'base.html.twig' %}

{% block title %}Feature{% endblock %}

 {% block pageheader %}
     <h1>Feature Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('feature_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('feature_edit', { 'id': feature.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('feature_delete', { 'id': feature.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Feature?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if feature.created %}{{ feature.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if feature.updated %}{{ feature.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    {% if feature.images | length > 0 %}
        <h2>Images</h2>
        <ul>
            {% for images in feature.images %}
                <li>
                    <a href="{{ path("image_show", {"id":images.id}) }}">
                        {{ images }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if feature.manuscriptFeatures | length > 0 %}
        <h2>Manuscriptfeatures</h2>
        <ul>
            {% for manuscriptFeatures in feature.manuscriptFeatures %}
                <li>
                    <a href="{{ path("manuscriptFeature_show", {"id":manuscriptFeatures.id}) }}">
                        {{ manuscriptFeatures }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
