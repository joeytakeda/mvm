{% extends 'base.html.twig' %}

{% block title %}Manuscript{% endblock %}

 {% block pageheader %}
     <h1>Manuscript Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('manuscript_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('manuscript_edit', { 'id': manuscript.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('manuscript_delete', { 'id': manuscript.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Manuscript?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ manuscript }}</td>
            </tr>
            <tr>
                <th>Call number</th>
                <td>{{ manuscript.callNumber }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ manuscript.description|raw }}</td>
            </tr>
            <tr>
                <th>Bibliography</th>
                <td>{{ manuscript.bibliography|raw }}</td>
            </tr>
            <tr>
                <th>Filled Page Count</th>
                <td>{{ manuscript.filledPageCount }}</td>
            </tr>
            <tr>
                <th>Item Count</th>
                <td>{{ manuscript.itemCount }}</td>
            </tr>
            <tr>
                <th>Poem Count</th>
                <td>{{ manuscript.poemCount }}</td>
            </tr>
            <tr>
                <th>First Line Index</th>
                <td>{% if manuscript.firstLineIndex %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Digitized</th>
                <td>{% if manuscript.digitized %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ manuscript.size}}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ manuscript.format }}</td>
            </tr>
            <tr>
                <th>Additional Genres</th>
                <td>{% if manuscript.additionalGenres %}{{ manuscript.additionalGenres|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>
                    {% if manuscript.region %}
                    <a href="{{ path('region_show', { 'id': manuscript.region.id}) }}">
                        {{ manuscript.region }}
                    </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Period</th>
                <td>
                    {% if manuscript.period %}
                    <a href="{{ path('period_show', { 'id': manuscript.period.id}) }}">
                        {{ manuscript.period }}
                    </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Archivesource</th>
                <td>
                    {% if manuscript.archiveSource %}
                    <a href="{{ path('archive_source_show', { 'id': manuscript.archiveSource.id}) }}">
                        {{ manuscript.archiveSource }}
                    </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Printsources</th>
                <td>
                    {% if manuscript.printSources | length > 0 %}
                        <ul>
                            {% for printSources in manuscript.printSources %}
                                <li>
                                    <a href="{{ path("print_source_show", {"id":printSources.id}) }}">
                                        {{ printSources }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Themes</th>
                <td>
                    {% if manuscript.themes | length > 0 %}
                        <ul>
                            {% for themes in manuscript.themes %}
                                <li>
                                    <a href="{{ path("theme_show", {"id":themes.id}) }}">
                                        {{ themes }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if manuscript.created %}{{ manuscript.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if manuscript.updated %}{{ manuscript.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    {% if manuscript.contents | length > 0 %}
        <h2>Contents</h2>
        <ul>
            {% for contents in manuscript.contents %}
                <li>
                    <a href="{{ path("content_show", {"id":contents.id}) }}">
                        {{ contents }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if manuscript.manuscriptContributions | length > 0 %}
        <h2>Manuscriptcontributions</h2>
        <ul>
            {% for manuscriptContributions in manuscript.manuscriptContributions %}
                <li>
                    <a href="{{ path("manuscript_contribution_show", {"id":manuscriptContributions.id}) }}">
                        {{ manuscriptContributions }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if manuscript.manuscriptFeatures | length > 0 %}
        <h2>Manuscriptfeatures</h2>
        <ul>
            {% for manuscriptFeatures in manuscript.manuscriptFeatures %}
                <li>
                    <a href="{{ path("manuscript_feature_show", {"id":manuscriptFeatures.id}) }}">
                        {{ manuscriptFeatures }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
