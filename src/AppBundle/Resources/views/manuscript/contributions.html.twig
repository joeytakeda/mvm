{% extends 'base.html.twig' %}

{% block title %}Manuscript Contributions{% endblock %}

 {% block pageheader %}
     <h1>Manuscript Contributions</h1>
     <p>Describe the contributions to {{ manuscript }} below.</p>
 {% endblock %} 

{% block body %}

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" name="submit" value="draft" class="btn btn-primary">Save</button>

            <a href="{{ path('manuscript_show', { 'id': manuscript.id }) }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>
    {{ form_end(edit_form) }}

{% endblock %}

{% block javascripts %}
    {% include 'NinesEditorBundle:editor:widget.html.twig' %}
{% endblock %}
