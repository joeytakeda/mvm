{% extends 'base.html.twig' %}

{% block title %}ArchiveSource{% endblock %}

 {% block pageheader %} 
    <h1>ArchiveSource Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('archive_source_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('archive_source_edit', { 'id': archiveSource.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('archive_source_delete', { 'id': archiveSource.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ArchiveSource?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if archiveSource.created %}{{ archiveSource.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if archiveSource.updated %}{{ archiveSource.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if archiveSource.manuscripts | length > 0 %}    
    <h2>Manuscripts</h2>
    <ul>
        {% for manuscripts in archiveSource.manuscripts %}
        <li>
            <a href="{{ path("manuscripts_show", {"id":manuscripts.id}) }}">
                {{ manuscripts }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
