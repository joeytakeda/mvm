{% extends 'base.html.twig' %}

{% block title %}ArchiveSource List{% endblock %}

{% block pageheader %}
    <h1>ArchiveSource List</h1>
    <p class="count">
        Displaying {{ archiveSources|length }} archiveSources of {{ archiveSources.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('archive_source_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('archive_source_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% include 'NinesUtilBundle:term/partial:index.html.twig' with {'terms': archiveSources} %}

    <div class="navigation">
        {{ knp_pagination_render(archiveSources) }}
    </div>

{% endblock %}
