{% extends 'base.html.twig' %}

{% block title %}ContentRole{% endblock %}

 {% block pageheader %}
     <h1>ContentRole Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('content_role_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('content_role_edit', { 'id': contentRole.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('content_role_delete', { 'id': contentRole.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ContentRole?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if contentRole.created %}{{ contentRole.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if contentRole.updated %}{{ contentRole.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    {% if contentRole.contributions | length > 0 %}
        <h2>Contributions</h2>
        <ul>
            {% for contributions in contentRole.contributions %}
                <li>
                    <a href="{{ path("contribution_show", {"id":contributions.id}) }}">
                        {{ contributions }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
