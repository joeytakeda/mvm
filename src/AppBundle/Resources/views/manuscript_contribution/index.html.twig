{% extends 'base.html.twig' %}

{% block title %}Manuscript Contribution List{% endblock %}

{% block pageheader %}
    <h1>  List</h1>
    <p class="count">
        Displaying {{ manuscriptContributions|length }} manuscriptContributions
        of {{ manuscriptContributions.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('manuscript_contribution_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('manuscript_contribution_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            {% for manuscriptContribution in manuscriptContributions %}
                <tr>
                    <td>
                        <a href="{{ path('manuscript_contribution_show', { 'id': manuscriptContribution.id }) }}">
                            {{ manuscriptContribution.note|raw }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(manuscriptContributions) }}
    </div>

{% endblock %}
