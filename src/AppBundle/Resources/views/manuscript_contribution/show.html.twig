{% extends 'base.html.twig' %}

{% block title %}ManuscriptContribution{% endblock %}

 {% block pageheader %} 
    <h1>ManuscriptContribution Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('manuscript_contribution_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('manuscript_contribution_edit', { 'id': manuscriptContribution.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('manuscript_contribution_delete', { 'id': manuscriptContribution.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ManuscriptContribution?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Note</th>
                <td>{{ manuscriptContribution.note }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if manuscriptContribution.created %}{{ manuscriptContribution.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if manuscriptContribution.updated %}{{ manuscriptContribution.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Person</th>
                <td>
                    <a href="{{ path('person_show', { 'id': manuscriptContribution.person.id}) }}">
                        {{ manuscriptContribution.person }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Role</th>
                <td>
                    <a href="{{ path('role_show', { 'id': manuscriptContribution.role.id}) }}">
                        {{ manuscriptContribution.role }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Manuscript</th>
                <td>
                    <a href="{{ path('manuscript_show', { 'id': manuscriptContribution.manuscript.id}) }}">
                        {{ manuscriptContribution.manuscript }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
