{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

 {% block pageheader %}
     <h1>Person Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('person_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('person_edit', { 'id': person.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('person_delete', { 'id': person.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Person?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Full Name</th>
                <td>{{ person.fullName }}</td>
            </tr>
            <tr>
                <th>Sortable Name</th>
                <td>{{ person.sortableName }}</td>
            </tr>
            <tr>
                <th>Birth date</th>
                <td>{{ person.birthDate }}</td>
            </tr>
            <tr>
                <th>Death date</th>
                <th>{{ person.deathDate }}</th>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if person.created %}{{ person.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if person.updated %}{{ person.updated|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Birthplace</th>
                <td>
                    {% if person.birthPlace %}
                        <a href="{{ path('place_show', { 'id': person.birthPlace.id}) }}">
                            {{ person.birthPlace }}
                        </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Deathplace</th>
                <td>
                    {% if person.deathPlace %}
                        <a href="{{ path('place_show', { 'id': person.deathPlace.id}) }}">
                            {{ person.deathPlace }}
                        </a>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
    {% if person.contentContributions | length > 0 %}
        <h2>Contentcontributions</h2>
        <ul>
            {% for contentContributions in person.contentContributions %}
                <li>
                    <a href="{{ path("content_contribution_show", {"id":contentContributions.id}) }}">
                        {{ contentContributions }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if person.manuscriptContributions | length > 0 %}
        <h2>Manuscriptcontributions</h2>
        <ul>
            {% for manuscriptContributions in person.manuscriptContributions %}
                <li>
                    <a href="{{ path("manuscript_contribution_show", {"id":manuscriptContributions.id}) }}">
                        {{ manuscriptContributions }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
