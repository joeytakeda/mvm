{% extends 'base.html.twig' %}

{% block title %}Place{% endblock %}

 {% block pageheader %} 
    <h1>Place Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('place_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('place_edit', { 'id': place.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('place_delete', { 'id': place.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Place?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if place.created %}{{ place.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if place.updated %}{{ place.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if place.printSources | length > 0 %}    
    <h2>Printsources</h2>
    <ul>
        {% for printSources in place.printSources %}
        <li>
            <a href="{{ path("printSources_show", {"id":printSources.id}) }}">
                {{ printSources }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if place.manuscripts | length > 0 %}    
    <h2>Manuscripts</h2>
    <ul>
        {% for manuscripts in place.manuscripts %}
        <li>
            <a href="{{ path("manuscripts_show", {"id":manuscripts.id}) }}">
                {{ manuscripts }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if place.peopleBorn | length > 0 %}    
    <h2>Peopleborn</h2>
    <ul>
        {% for peopleBorn in place.peopleBorn %}
        <li>
            <a href="{{ path("peopleBorn_show", {"id":peopleBorn.id}) }}">
                {{ peopleBorn }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if place.peopleDied | length > 0 %}    
    <h2>Peopledied</h2>
    <ul>
        {% for peopleDied in place.peopleDied %}
        <li>
            <a href="{{ path("peopleDied_show", {"id":peopleDied.id}) }}">
                {{ peopleDied }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
