{% extends 'base.html.twig' %}

{% block title %}Region{% endblock %}

 {% block pageheader %}
     <h1>Region Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('region_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('region_edit', { 'id': region.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('region_delete', { 'id': region.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Region?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Full Name</th>
                <td>{{ region.fullName }}</td>
            </tr>
            <tr>
                <th>Sortable Name</th>
                <td>{{ region.sortableName }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if region.created %}{{ region.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if region.updated %}{{ region.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    {% if region.printSources | length > 0 %}
        <h2>Printsources</h2>
        <ul>
            {% for printSources in region.printSources %}
                <li>
                    <a href="{{ path("printSource_show", {"id":printSources.id}) }}">
                        {{ printSources }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if region.manuscripts | length > 0 %}
        <h2>Manuscripts</h2>
        <ul>
            {% for manuscripts in region.manuscripts %}
                <li>
                    <a href="{{ path("manuscript_show", {"id":manuscripts.id}) }}">
                        {{ manuscripts }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if region.peopleBorn | length > 0 %}
        <h2>Peopleborn</h2>
        <ul>
            {% for peopleBorn in region.peopleBorn %}
                <li>
                    <a href="{{ path("peopleBorn_show", {"id":peopleBorn.id}) }}">
                        {{ peopleBorn }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if region.peopleDied | length > 0 %}
        <h2>Peopledied</h2>
        <ul>
            {% for peopleDied in region.peopleDied %}
                <li>
                    <a href="{{ path("peopleDied_show", {"id":peopleDied.id}) }}">
                        {{ peopleDied }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
