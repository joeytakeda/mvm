{% extends 'base.html.twig' %}

{% block title %}ImageFile{% endblock %}

 {% block pageheader %} 
    <h1>ImageFile Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('image_file_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('image_file_edit', { 'id': imageFile.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('image_file_delete', { 'id': imageFile.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ImageFile?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if imageFile.created %}{{ imageFile.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if imageFile.updated %}{{ imageFile.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
