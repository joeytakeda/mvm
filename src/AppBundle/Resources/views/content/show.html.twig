{% extends 'base.html.twig' %}

{% block title %}Content{% endblock %}

 {% block pageheader %}
     <h1>Content Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('content_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('content_edit', { 'id': content.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('content_delete', { 'id': content.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Content?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ content.title }}</td>
            </tr>
            <tr>
                <th>Transcription</th>
                <td>{{ content.transcription|raw }}</td>
            </tr>
            <tr>
                <th>Context</th>
                <td>{{ content.context|raw }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ content.description|raw }}</td>
            </tr>
            <tr>
                <th>Manuscript</th>
                <td>
                    <a href="{{ path('manuscript_show', { 'id': content.manuscript.id}) }}">
                        {{ content.manuscript }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Print Source</th>
                <td>
                    <a href="{{ path('print_source_show', { 'id': content.printSource.id}) }}">
                        {{ content.printSource }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if content.created %}{{ content.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if content.updated %}{{ content.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    {% if content.contributions | length > 0 %}
        <h2>Contributions</h2>
        <ul>
            {% for contribution in content.contributions %}
                <li>
                    <a href="{{ path("content_contribution_show", {"id":contribution.id}) }}">
                        {{ contribution }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if content.images | length > 0 %}
        <h2>Images</h2>
        <ul>
            {% for image in content.images %}
                <li>
                    <a href="{{ path("image_show", {"id":image.id}) }}">
                        {{ image }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
