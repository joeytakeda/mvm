{% extends 'base.html.twig' %}

{% block title %}Manuscript Feature List{% endblock %}

{% block pageheader %}
    <h1>Manuscript Feature List</h1>
    <p class="count">
        Displaying {{ manuscriptFeatures|length }} manuscriptFeatures of {{ manuscriptFeatures.getTotalItemCount }}
        total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('manuscript_feature_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('manuscript_feature_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            {% for manuscriptFeature in manuscriptFeatures %}
                <tr>
                    <td>
                        <a href="{{ path('manuscript_feature_show', { 'id': manuscriptFeature.id }) }}">
                            {{ manuscriptFeature.note|raw }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(manuscriptFeatures) }}
    </div>

{% endblock %}
