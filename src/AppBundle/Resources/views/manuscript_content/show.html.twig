{% extends 'base.html.twig' %}

{% block title %}ManuscriptContent{% endblock %}

 {% block pageheader %}
     <h1>ManuscriptContent Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('manuscript_content_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Context</th>
                <td>{{ manuscriptContent.context }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if manuscriptContent.created %}{{ manuscriptContent.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if manuscriptContent.updated %}{{ manuscriptContent.updated|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>
                    <a href="{{ path('content_show', { 'id': manuscriptContent.content.id}) }}">
                        {{ manuscriptContent.content }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Manuscript</th>
                <td>
                    <a href="{{ path('manuscript_show', { 'id': manuscriptContent.manuscript.id}) }}">
                        {{ manuscriptContent.manuscript }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Print Source</th>
                <td>
                    <a href="{{ path('print_source_show', { 'id': manuscriptContent.printSource.id}) }}">
                        {{ manuscriptContent.printSource }}
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
