{% extends 'base.html.twig' %}

{% block title %}ContentContribution{% endblock %}

 {% block pageheader %} 
    <h1>ContentContribution Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('content_contribution_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('content_contribution_edit', { 'id': contentContribution.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('content_contribution_delete', { 'id': contentContribution.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ContentContribution?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Note</th>
                <td>{{ contentContribution.note }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if contentContribution.created %}{{ contentContribution.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if contentContribution.updated %}{{ contentContribution.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Role</th>
                <td>
                    <a href="{{ path('role_show', { 'id': contentContribution.role.id}) }}">
                        {{ contentContribution.role }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Person</th>
                <td>
                    <a href="{{ path('person_show', { 'id': contentContribution.person.id}) }}">
                        {{ contentContribution.person }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Content</th>
                <td>
                    <a href="{{ path('content_show', { 'id': contentContribution.content.id}) }}">
                        {{ contentContribution.content }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
