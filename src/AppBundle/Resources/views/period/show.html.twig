{% extends 'base.html.twig' %}

{% block title %}Period{% endblock %}

 {% block pageheader %} 
    <h1>Period Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('period_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('period_edit', { 'id': period.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('period_delete', { 'id': period.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Period?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if period.created %}{{ period.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if period.updated %}{{ period.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if period.manuscripts | length > 0 %}    
    <h2>Manuscripts</h2>
    <ul>
        {% for manuscripts in period.manuscripts %}
        <li>
            <a href="{{ path("manuscripts_show", {"id":manuscripts.id}) }}">
                {{ manuscripts }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
