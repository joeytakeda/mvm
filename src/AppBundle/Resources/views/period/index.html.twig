{% extends 'base.html.twig' %}

{% block title %}Period List{% endblock %}

{% block pageheader %}
    <h1>Period List</h1>
    <p class="count">
        Displaying {{ periods|length }} periods of {{ periods.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('period_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('period_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% include 'NinesUtilBundle:term/partial:index.html.twig' with {'terms': periods, 'path': 'period_show'} %}

    <div class="navigation">
        {{ knp_pagination_render(periods) }}
    </div>

{% endblock %}
