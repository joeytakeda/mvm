{% extends 'base.html.twig' %}

{% block title %}ImageFile List{% endblock %}

{% block pageheader %}
    <h1>ImageFile List</h1>
    <p class="count">
        Displaying {{ imageFiles|length }} imageFiles of {{ imageFiles.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('image_file_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('image_file_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr></tr>
        </thead>
        <tbody>
            {% for imageFile in imageFiles %}
                <tr></tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(imageFiles) }}
    </div>

{% endblock %}
