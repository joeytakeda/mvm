{% extends 'base.html.twig' %}

{% block title %}Archive{% endblock %}

{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'archive', 'show': archive.label} %}
{% endblock %}

 {% block pageheader %}
    {% include 'partial/category-index.html.twig' with {'term': archive} %}
 {% endblock %} 


{% block admin %}
<div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('archive_edit', { 'id': archive.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit </a>
        <a href="{{ path('archive_delete', { 'id': archive.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Archive?">
            <span class='glyphicon glyphicon-remove'></span> Delete </a>
    </div>
</div>
{% endblock %}

{% block body %}

    {% include 'manuscript/partial/gallery.html.twig' with {'manuscripts': archive.manuscripts} %}

{% endblock %}
