{% extends 'base.html.twig' %}

{% block title %}Archive List{% endblock %}


{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'archive'} %}
{% endblock %}

{% block pageheader %}
    <h1>Archives</h1>
{% include 'partial/count.html.twig' with {'index': archives, 'label': 'archives'} %}
{% endblock %}

{% block admin %}

<div class='btn-toolbar pull-right'>
    <div class='btn-group'>
        <a href="{{ path('archive_new') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-plus"></span> New </a>
        <a href="{{ path('archive_search') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span> Search </a>
    </div>
</div>
{% endblock %}

{% block body %}
{% include 'partial/search-form.html.twig' with {'path': path('archive_search'), 'q': ''} %}
{% include 'archive/partial/index.html.twig' %}

    <div class="navigation">
        {{ knp_pagination_render(archives) }}
    </div>

{% endblock %}
