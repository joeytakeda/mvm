{% extends 'base.html.twig' %}

{% block title %}ImageUrl List{% endblock %}

{% block pageheader %}
    <h1>Image URLs</h1>
{% include 'partial/count.html.twig' with {'index': imageUrls, 'label': 'image URLs'} %}
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('image_url_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('image_url_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr></tr>
        </thead>
        <tbody>
            {% for imageUrl in imageUrls %}
                <tr></tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(imageUrls) }}
    </div>

{% endblock %}
