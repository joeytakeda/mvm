{% extends 'base.html.twig' %}

{% block title %}Period List{% endblock %}
{% block breadcrumb %}
{% include 'partial/breadcrumb.html.twig' with {'index': 'period'} %}
{% endblock %}

{% block pageheader %}
    <h1>Periods</h1>
{% include 'partial/count.html.twig' with {'index': periods, 'label': 'periods'} %}
{% endblock %}

{% block admin %}

<div class='btn-toolbar pull-right'>
    <div class='btn-group'>
        <a href="{{ path('period_new') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-plus"></span> New </a>
    </div>
</div>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Period</th>
                <th>Description</th>
                <th>Manuscripts</th>
            </tr>
        </thead>
        <tbody>
            {% for period in periods %}
                <tr>
                    <td>
                        <a href="{{ path('period_show', {'id': period.id}) }}">{{ period }}</a>
                    </td>
                    <td>{{ period.description|raw }}</td>
                    <td>{{ period.manuscripts|length }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <div class="navigation">
        {{ knp_pagination_render(periods) }}
    </div>

{% endblock %}
