{% extends 'base.html.twig' %}

{% block title %} {{ theme.label }} {% endblock %}

 {% block pageheader %}
    {% include 'partial/category-index.html.twig' with {'term':theme, 'prefix': 'Theme'} %}
 {% endblock %}
 
 {% block breadcrumb %}
 {% include 'partial/breadcrumb.html.twig' with {'index': 'theme', 'show': theme} %}
 {% endblock %}

{% block admin %}
<div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('theme_edit', { 'id': theme.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit </a>
        <a href="{{ path('theme_delete', { 'id': theme.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Theme?">
            <span class='glyphicon glyphicon-remove'></span> Delete </a>
    </div>
</div>
{% endblock%}

{% block body %}
    {% include 'manuscript/partial/gallery.html.twig' with {'manuscripts': theme.manuscripts} %}
{% endblock %}
