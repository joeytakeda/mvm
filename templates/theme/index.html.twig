{% extends 'base.html.twig' %}

{% block title %}Theme List{% endblock %}

{% block pageheader %}
    <h1>Themes</h1>
{% include 'partial/count.html.twig' with {'index': themes, 'label': 'themes'} %}
{% endblock %}

{% block breadcrumb %}
{% include 'partial/breadcrumb.html.twig' with {'index': 'theme'} %}
{% endblock %}

{% block admin %}
<div class='btn-toolbar pull-right'>
    <div class='btn-group'>
        <a href="{{ path('theme_new') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-plus"></span> New </a>
        <a href="{{ path('theme_search') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span> Search </a>
    </div>
</div>
{% endblock %}


{% block body %}
{% include 'partial/search-form.html.twig' with {'path': path('theme_search'), 'q': ''} %}
{% include 'theme/partial/index.html.twig' %}

    <div class="navigation">
        {{ knp_pagination_render(themes) }}
    </div>

{% endblock %}
