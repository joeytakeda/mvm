{% extends 'base.html.twig' %}

{% block title %}Coterie Details {% endblock %}

 {% block pageheader %}
     <h1>Coterie Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('coterie_edit', {'id': coterie.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('coterie_delete', {'id': coterie.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ coterie.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    {% embed '@NinesUtil/term/partial/show.html.twig' with {'term': coterie} %}
        {% block callback %}
            <tr>
                <th>Person</th>
                <td>
                    {% if coterie.people|length > 0 %}
                        <ul>
                            {% for person in coterie.people %}
                                <li>
                                    <a href='{{ path("person_show", {"id":person.id }) }}'>
                                        {{ person }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
        {% endblock %}
    {% endembed %}

{% endblock %}
