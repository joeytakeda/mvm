{% extends 'base.html.twig' %}


{% set hasPrintSources = region.printSources | length > 0 %}
{% set hasManuscripts = region.manuscripts | length > 0 %}
{% set hasPeople = region.people | length > 0 %}


{% block title %}{{ region.name }}{% endblock %}

 {% block pageheader %}
     <h1>{{ region.name }}</h1>
 {% endblock %} 
 
{% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig'
    with {'index': 'region', 'show':region.name} %}
{% endblock %}
 

{% block admin %}
<div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('region_edit', { 'id': region.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit </a>
        <a href="{{ path('region_delete', { 'id': region.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Region?">
            <span class='glyphicon glyphicon-remove'></span> Delete </a>
    </div>
</div>
{% endblock %}


{% block body %}
<ul class="nav nav-pills" id="tabs" role="tablist">
    <li class="nav-item active">
        <a class="nav-link active" id="print-sources-tab" data-toggle="tab" href="#print-sources" role="tab" aria-controls="print-sources" aria-selected="true">Print Sources</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="manuscripts-tab" data-toggle="tab" href="#manuscripts" role="tab" aria-controls="manuscripts" aria-selected="false">Manuscripts</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="people-tab" data-toggle="tab" href="#people" role="tab" aria-controls="people" aria-selected="false">People Born</a>
    </li>
</ul>
<div class="tab-content" id="tabContent">
    <div class="tab-pane active" id="print-sources" role="tabpanel" aria-labelledby="print-sources-tab">
        {% if hasPrintSources %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                {% for printSource in region.printSources %}
                <tr>
                    <td>
                        <a href="{{ path("print_source_show", {"id":printSource.id}) }}">
                            {{ printSource }}
                        </a>  
                    </td>
                    <td>
                        {{ printSource.description|raw }}
                    </td>
                    
                </tr>
            {% endfor %}
        </table>
        {% else %}
            <p>No print sources available.</p>
        {% endif %}
    </div>
    <div class="tab-pane fade" id="manuscripts" role="tabpanel" aria-labelledby="manuscripts-tab">
        {% if hasManuscripts %}
        <div class="gallery">
           {% for manuscript in region.manuscripts %}
                {% include 'manuscript/partial/gallery-item.html.twig' with {'manuscript': manuscript} %}
           {% endfor %}
        </div>
        {% else %}
        <p>No manuscripts available.</p>

        {% endif %}
    </div>
    <div class="tab-pane fade" id="people" role="tabpanel" aria-labelledby="people-tab">
        {% if hasPeople %}
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Birth Date</th>
                    <th>Death Date</th>
                </tr>
            </thead>
            <tbody>
                {% for person in region.people %}
                <tr>
                    <td>
                        <a href="{{ path("person_show", {"id":person.id}) }}">
                            {{ person.fullName }}
                        </a>
                    </td>
                    <td>
                        {% include 'person/partial/gender.html.twig' %}
                    </td>
                    <td>
                        {{ person.birthDate }}
                    </td>
                    <td>
                        {{ person.deathDate }}
                    </td>
                    
                   
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
        <ul>
            
        </ul>
        {% else %}
        
        <p>No people available.</p>
        
        {% endif %}
    </div>
</div>

{% endblock %}
