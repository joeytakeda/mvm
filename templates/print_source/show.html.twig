{% extends 'base.html.twig' %}

{% block title %}Print Source{% endblock %}

 {% block pageheader %}
    {% embed 'partial/category-index.html.twig' with {'term': printSource} %}
        {% block callback %}
            {% if printSource.region %}
                <p>
                    <a href="{{ path('region_show', {'id': printSource.region.id}) }}">{{ printSource.region }}</a>
                </p>
            {% endif %}
        {% endblock %}
    {% endembed %}
 {% endblock %} 
 
 {% block breadcrumb %}
    {% include 'partial/breadcrumb.html.twig' with {'index': 'print_source', 'index_label': 'Print Sources', 'show': printSource.label} %}
 {% endblock %}
 
 {% block admin %}
<div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('print_source_edit', { 'id': printSource.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit </a>
        <a href="{{ path('print_source_delete', { 'id': printSource.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this PrintSource?">
            <span class='glyphicon glyphicon-remove'></span> Delete </a>
    </div>
</div>
 {% endblock %}

{% block body %}

{% include 'manuscript/partial/gallery.html.twig' with {'manuscripts': printSource.manuscripts} %}
{% endblock %}
