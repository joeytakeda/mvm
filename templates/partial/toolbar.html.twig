<div class="btn-toolbar">
    <div class="btn-group pull-right">

        {% if new is defined %}
            <a href="{{ path(new) }}" class="btn btn-default"> <span class="glyphicon glyphicon-plus"></span> New</a>
        {% endif %}

        {% if edit is defined %}
            <a href="{{ path(edit, {'id': id}) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-edit"></span> Edit</a>
        {% endif %}

        {% if delete is defined %}
            <a href="{{ path(delete, {'id': id}) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this record?">
                <span class="glyphicon glyphicon-remove"></span> Delete</a>
        {% endif %}
    </div>
</div>
