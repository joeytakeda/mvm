{% extends 'base.html.twig' %}

{% block title %}Manuscripts{% endblock %}

{% block breadcrumb %}
{% include 'partial/breadcrumb.html.twig' with {'index': 'manuscript'} %}
{% endblock %}

{% block pageheader %}
    <h1>Manuscripts</h1>
    {% include 'partial/count.html.twig' with {'index': manuscripts, 'label': 'manuscripts'} %}

{% endblock %}


{% block admin %}
<div class="btn-toolbar pull-right">
    <div class='btn-group'>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('manuscript_new') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-plus"></span> New </a>
        {% endif %}
        <a href="{{ path('manuscript_search') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span> Search </a>
    </div>
</div>
{% endblock %}


{% block body %}
{% include 'partial/search-form.html.twig' with {'path': path('manuscript_search'), 'help': 'Search for manuscripts by manuscript title or call number.', 'q': ''} %}


    {% include 'manuscript/partial/gallery.html.twig' %}


    <div class="navigation">
        {{ knp_pagination_render(manuscripts) }}
    </div>

{% endblock %}
