{% extends 'base.html.twig' %}

{% block title %}Feature List{% endblock %}

{% block breadcrumb %}
{% include 'partial/breadcrumb.html.twig' with {'index': 'feature'} %}
{% endblock %}

{% block pageheader %}
    <h1>Features</h1>
{% include 'partial/count.html.twig' with {'index': manuscripts, 'label': 'manuscripts'} %}
{% endblock %}


{% block admin %}
    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
                <a href="{{ path('feature_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New 
                </a>
        </div>
    </div>
{% endblock %}

{% block body %}    

        <table class="table">
            <thead>
                <tr>
                    <th>Feature</th>
                    <th>Description</th>
                    <th>Manuscripts</th>
                </tr>
            </thead>
            <tbody>
                {% for feature in features %}
                    <tr>
                        <td>
                            <a href="{{ path('feature_show',{'id': feature.id}) }}">
                                {{ feature }}
                            </a>
                        </td>
                        <td>{{ feature.description | raw }}</td>
                        <td class="number">{{ feature.manuscriptFeatures | length }}</td>
                    </tr>
                
                {% endfor %}
            </tbody>
        </table>
    <div class="navigation">
        {{ knp_pagination_render(features) }}
    </div>

{% endblock %}
